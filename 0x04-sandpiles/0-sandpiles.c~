/**
 * sandpiles_sum - function add 2 grid
 * @grid1: the first grid
 * @grid2: the second grid
 *
 */

void sandpiles_sum(int grid1[3][3], int grid2[3][3])
{
	for(int i = 0, int j = 0; i < 3, j < 3; i++, j++)
	{
		for(int k = 0, int l = 0; k < 3, l < 3; k++, l++)
		{
			grid1[i][k] += grid2[j][l]; 
		}
	}
}
